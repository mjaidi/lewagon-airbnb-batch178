
<h1>Welcome <%= current_user.first_name %></h1>

<p>List of your accomodations :</p>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6">
    <% @apartments.each do |apartment| %>
      <div class="cards">
      <div class="card">
        <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('https://img.huffingtonpost.com/asset/5a3126821500004e0049b6c9.jpeg?ops=scalefit_720_noupscale');">
            <span class="card-category">Shanghai</span>
            <div class="card-description">
              <h2><%= apartment.name %></h2>
              <p><%= apartment.description %></p>
            </div>
            <img class="card-user avatar avatar-large" src="images/jad.png">
            <a class="card-link" href="#"></a>
          </div>
          <div class="card-footer">
            <p>Posted on 22/11/19</p>
            <%= link_to "Modify", edit_apartment_path(apartment), class: "btn btn" %>

            <div class="controls">
              <a href="#"><i class="fa fa-star"></i></a>
              <a href="#"><i class="fa fa-heart"></i></a>
              <a href="#"><i class="fa fa-share"></i></a>
          </div>
        </div>
      </div>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6">
      <%= simple_form_for(@apartment, :html => { :multipart => true }) do |f| %>
      
      <h2>Add an accomodation</h2>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :price_per_day %>
          <%= f.input :service_fees %>
    
      <h2>Add Your Photos</h2>
        <%= f.simple_fields_for :apartment do |p| %>
            <%= p.file_field :photo, :multiple => true, name: "photos[photo][]" %>
        <% end %>

      <h2>Choose Your Equipment</h2>
        <%= f.association :equips, as: :check_boxes, label:"", class: "check-tag" %>
        <%= f.button :submit, class: 'btn btn-create' %>
      
      <% end %>
  </div>
</div>



